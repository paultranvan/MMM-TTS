{
    "rules": {
        "comma-dangle": 0,
        "indent": ["error", 4],
        "max-len": [2, 80, { "ignoreStrings": true }],
        "radix": [2, "as-needed"],
        "no-console": 0
    },
    "settings": {
        "import/core-modules": [ "node_helper" ]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    }
}
